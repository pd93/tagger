{
    "name": "tagger",
    "displayName": "tagger",
    "description": "A VSCode extension to view, highlight and manage in-code tags",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:tagger.refresh"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "tagger.refresh",
                "title": "Tagger: Refresh"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "tagger",
                    "title": "Tagger",
                    "icon": "res/tagger.svg"
                }
            ]
        },
        "views": {
            "tagger": [
                {
                    "id": "tagger-tags",
                    "name": "Tags"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
